{
    /* enforcing */
    "bitwise": true,
    "camelcase": false,
    "curly": false,
    "eqeqeq": false,
    "es3": true,
    "-W024": true,
    "forin": false, // jshint doesn't understand continue form of this :(
    "freeze": true,
    "immed": true,
    "indent": 4,
    "latedef": "nofunc",
    "newcap": false,
    "noarg": true,
    "noempty": false,
    "nonbsp": true,
    "nonew": true,
    "plusplus": false,
    "quotmark": "double",
    "undef": true,
    "unused": "vars",
    "globalstrict": true,
    // "maxparams": 0,
    // "maxdepth": 0,
    // "maxstatements": 0,
    // "maxcomplexity": 0,
    // "maxlen": 0,

    /* relaxing */
    "strict": false,
    "asi": false,
    "boss": false,
    // "debug": false,
    "eqnull": false,
    "esnext": false,
    "evil": false,
    "expr": false,
    "funcscope": false,
    "iterator": false,
    "lastsemic": true,
    "laxbreak": false,
    "laxcomma": false,
    "loopfunc": false,
    // "maxerr": 50,
    "moz": false,
    "multistr": false,
    "notypeof": false,
    "proto": false,
    "scripturl": false,
    "shadow": false,
    "sub": false,
    "supernew": false,
    "noyield": false,

    /* env */
    "browser": false, // inline global declarations preferred as needed to easily see node vs. browser issues
    "node": true,
    "jquery": false, // see browser note

    "couch": false,
    "devel": false,
    "dojo": false,
    "mootools": false,
    "nonstandard": false,
    "phantom": false,
    "prototypejs": false,
    "rhino": false,
    "worker": false,
    "wsh": false,
    "yui": false,

    /* globals */
    "globals": {
        // jasmine
        "after": false,
        "afterEach": false,
        "before": false,
        "beforeEach": false,
        "describe": false,
        "expect": false,
        "it": false,
        "runs": false,
        "waitsFor": false,
        "JSON": false
    }
}